# Copy this file to .env and customize with your values
# Source it before running Terraform: source .env

# Required: GCP Organization and Billing (TF_VAR_ prefix maps to Terraform variables)
export TF_VAR_organization_id="123456789012"
export TF_VAR_billing_account="012345-678901-234567"

# Required: Domain name for the URL shortener
export TF_VAR_domain_name="go.example.com"  # Will be used for prod, dev gets dev. prefix

# Optional: GCP Folder (set to null string if not using folders)
export TF_VAR_folder_id=""  # or "123456789" if using folders

export SA_PROJECT="xxx"
export PROJECT_PREFIX="blah-urlshort"

# Optional: Regional settings (matches terraform.tfvars)
export REGION="europe-west1"

# Optional: Notification emails (used in monitoring setup)
export SECURITY_EMAIL="security@example.com"
export OPS_EMAIL="ops@example.com"
